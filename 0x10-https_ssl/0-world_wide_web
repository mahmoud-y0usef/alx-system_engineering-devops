#!/bin/bash

# Function to retrieve DNS information for a subdomain
get_dns_info() {
    local subdomain="$1"
    local domain="$2"

    # Perform DNS lookup for the subdomain
    dns_output=$(dig $subdomain.$domain | awk '/ANSWER SECTION/ {getline; print}')

    # Extract record type and destination
    record_type=$(echo "$dns_output" | awk '{print $4}')
    destination=$(echo "$dns_output" | awk '{print $5}')

    # Output the result
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main script
main() {
    local domain="$1"
    local subdomain="$2"

    # If subdomain is not provided, list default subdomains
    if [ -z "$subdomain" ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
    else
        subdomains=("$subdomain")
    fi

    # Iterate through subdomains and retrieve DNS information
    for sub in "${subdomains[@]}"; do
        get_dns_info "$sub" "$domain"
    done
}

# Run the main script with provided arguments
main "$@"
